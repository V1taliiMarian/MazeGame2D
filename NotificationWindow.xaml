<Window x:Class="LabyrinthGame.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification" 
        Background="#91A3B0" 
        WindowStyle="None" 
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        MinWidth="350" 
        MinHeight="200"
        MaxHeight="500"
        KeyboardNavigation.TabNavigation="None"
        BorderBrush="#536878" 
        BorderThickness="5">

    <Grid x:Name="MainContent" HorizontalAlignment="Center" VerticalAlignment="Center" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" x:Name="ButtonsRow"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="10">
            <TextBlock x:Name="MessageText" 
                       TextWrapping="Wrap" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Foreground="White"
                       FontSize="20" 
                       FontWeight="Bold"
                       TextAlignment="Center"/>
        </ScrollViewer>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,15,0,25">
            <Button x:Name="YesButton" 
                    Content="Так" 
                    Width="100"
                    Height="35"
                    Margin="10,0"
                    Style="{StaticResource NotificationButtonStyle}"/>
            <Button x:Name="NoButton" 
                    Content="Ні" 
                    Width="100"
                    Height="35"
                    Margin="10,0"
                    Style="{StaticResource NotificationButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>