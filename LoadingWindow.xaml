<Window x:Class="LabyrinthGame.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading" 
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        Width="400" 
        Height="150"
        WindowStartupLocation="CenterScreen">

    <Border Background="#91A3B0" 
            CornerRadius="10" 
            BorderBrush="#536878" 
            BorderThickness="5">
        <Grid Margin="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Завантаження..." 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <ProgressBar IsIndeterminate="True" 
                             Height="20"
                             Background="#536878"
                             Foreground="White"/>

                <TextBlock x:Name="LoadingText" 
                           Text="Підготовка до гри..." 
                           FontSize="14" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,15,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>